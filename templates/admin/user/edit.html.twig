{% extends "base.html.twig" %}

{% block title %}Gestion des utilisateurs
{% endblock %}

{% block body %}
	<div class="container p-3">
		<div class="card mt-2">
			{% if user == "bibliothecaire" %}
				<div class="card-header">Modifier le bibliothecaire :
					{{bibliothecaire.nom}}
					{{bibliothecaire.prenom}}</div>
			{% else %}
				<div class="card-header">Modifier l'emprunteur :
					{{emprunteur.nom}}
					{{emprunteur.prenom}}</div>
			{% endif %}
			<div class="card-body mt-2">
				{{form_start(form, {'attr' : {'class' : 'row'}})}}
				<div class="col-lg-4 col-12">{{form_row(form.nom)}}</div>
				<div class="col-lg-4 col-12">{{form_row(form.prenom)}}</div>
				<div class="col-lg-4 col-12">{{form_row(form.email)}}</div>
				<div class="col-lg-6 col-12">{{form_row(form.password)}}</div>
				<div class="col-lg-6 col-12">{{form_row(form.phone)}}</div>
				<div class="col-lg-12 col-12 {{user == " bibliothecaire" ? 'visually-hidden' : ''}}">{{form_row(form.adresse)}}</div>
				<div class="col-lg-12 {{user == 'bibliothecaire' ? 'visually-hidden' : ''}} col-12">{{form_row(form.date_inscription)}}</div>
				{{form_end(form)}}
				{% if user == 'bibliothecaire' %}
					<a class="btn btn-secondary w-25 fw-bold shadow" href="{{path('admin_utilisateur_bibliothecaire_index')}}">Retour a la liste</a>
				{% else %}
					<a class="btn btn-secondary w-25 fw-bold shadow" href="{{path('admin_utilisateur_emprunteur_index')}}">Retour a la liste</a>
					{{form_end(form)}}
				{% endif %}
			</div>
		</div>

	</div>

{% endblock %}
