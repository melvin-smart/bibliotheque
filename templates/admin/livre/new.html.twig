{% extends "base.html.twig" %}

{% block title %}Gestion des livres
{% endblock %}

{% block body %}
	<div class="container p-3">
		<div class="card mt-3">
			<div class="card-header">
                <h2>Creer un livre</h2>
            </div>
			<div class="card-body mt-2">
                {{form_start(form, {'attr' : {'class' : 'row'}})}}
                <div class="col-lg-4 col-12">{{form_row(form.titre)}}</div>
                <div class="col-lg-4 col-12">{{form_row(form.auteur)}}</div>
                <div class="col-lg-4 col-12">{{form_row(form.isbn)}}</div>
                <div class="col-lg-6 col-12">{{form_row(form.genre)}}</div>
                <div class="col-lg-6 col-12">{{form_row(form.date_publication)}}</div>
                <div class="col-lg-6 col-12">{{form_row(form.qte_totale)}}</div>
                <div class="col-lg-6 col-12">{{form_row(form.qte_dispo)}}</div>
                <div class="col-lg-12 col-12">{{form_row(form.description)}}</div>
                {{form_end(form)}}
                <a href="{{path('admin_livre_index')}}" class="btn btn-secondary w-25 fw-bold shadow">Retour a la liste</a>
            </div>
		</div>

	</div>

{% endblock %}
